{
  "name": "label-remover",
  "version": "1.0.0",
  "private": false,
  "description": "Removes all labels from a pull request once it is merged or closed.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zillyinc/label-remover.git"
  },
  "keywords": [
    "actions",
    "github",
    "labels",
    "pull-request"
  ],
  "author": "Roger Oba",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.5.2",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@octokit/webhooks": "^8.12.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.41",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/parser": "^4.22.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.20.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.2"
  }
}
