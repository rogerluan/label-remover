{
  "name": "label-remover",
  "version": "1.0.0",
  "private": false,
  "description": "Removes all labels from a pull request once it is merged or closed.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zillyinc/label-remover.git"
  },
  "keywords": [
    "actions",
    "github",
    "labels",
    "pull-request"
  ],
  "author": "Roger Oba",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.3",
    "@octokit/rest": "^18.12.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@octokit/webhooks": "^9.23.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.0.6",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/parser": "^5.23.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^26.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^28.1.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.2"
  }
}
